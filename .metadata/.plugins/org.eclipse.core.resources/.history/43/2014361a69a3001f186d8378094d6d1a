#include "fsm_manual.h"

void fsm_manual_run()
{
	set7LED();
	switch(status_manual)
	{
		case MODE1:

				status_manual = MODE2;
				mode1_flag = 0;
				//mode2_flag = 0;
				setTimer3(50);
				//idle_counter++;

			break;
		case MODE2:
			counter_7seg1 = 0;
			counter_7seg2 = 2;
			if(timer3_flag == 1)
			{
				blinkRED();
				idle_counter++;
				setTimer3(50);
			}
			if(idle_counter >= 20)
			{
				status1 = INIT;
				status2 = INIT;
				idle_counter = 0;
				//setTimer1(5);
			}
			if(isButton1Pressed() == 1)
			{
				status1 = MODE3;
				setTimer3(50);
			}
			break;
		case MODE3:
			if(timer3_flag == 1)
			{
				blinkYEL();
				setTimer3(50);
			}
			counter_7seg1 = 0;
			if(timer1_flag == 1)
			{
				status1 = AUTO_YEL;
				setTimer1(2);
			}
			if(isButton1Pressed() == 1)
			{
				status1 = MODE4;
				setTimer1(10);
			}
			break;
		case MODE4:
			if(timer3_flag == 1)
			{
				blinkGRE();
				setTimer3(50);
			}
			counter_7seg1 = 0;
			if(timer1_flag == 1)
			{
				status1 = AUTO_GRE;
				setTimer1(3);
			}
			if(isButton1Pressed() == 1)
			{
				status1 = MODE1;
				setTimer1(10);
			}
			break;
		default:
			break;
	}






}
