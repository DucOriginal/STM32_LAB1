//				TimerForKeyPress = 200;
//			}
//		}
//		else{
//			TimerForKeyPress--;
//			if(TimerForKeyPress == 0)
//			{
//				keyReg32 = NORMAL_STATE;
//			}
//		}
//	}
//	//////////////////For Button 3////////////////////
//	keyReg03 = keyReg13;
//	keyReg13 = keyReg23;
//	keyReg23 = HAL_GPIO_ReadPin(Button3_GPIO_Port,Button3_Pin);
//
//	if((keyReg03 == keyReg13) && (keyReg13 == keyReg23))
//	{
//		if(keyReg33 != keyReg23)
//		{
//			keyReg33 = keyReg23;
